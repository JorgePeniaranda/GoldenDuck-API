{
  "name": "goldenduck-api",
  "version": "3.0.0",
  "description": "The REST API enables secure banking and wallet transactions.",
  "private": true,
  "author": "Lycokat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lycokat/GoldenDuck-API/issues"
  },
  "homepage": "https://github.com/Lycokat/GoldenDuck-API#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lycokat/GoldenDuck-API.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "prisma"
  ],
  "main": "index.ts",
  "engines": {
    "node": ">20"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:deploy": "npx prisma migrate deploy",
    "db:push": "npx prisma db push",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@faker-js/faker": "8.4.1",
    "@nestjs/common": "10.3.5",
    "@nestjs/core": "10.3.5",
    "@nestjs/platform-express": "10.3.5",
    "@nestjs/swagger": "7.3.0",
    "@prisma/client": "5.11.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "express": "4.19.2",
    "reflect-metadata": "0.2.1",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "10.3.5",
    "@types/bcryptjs": "2.4.6",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.30",
    "@types/supertest": "6.0.2",
    "bcryptjs": "2.4.3",
    "eslint": "^8.57.0",
    "eslint-config-love": "43.1.0",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "prisma": "5.11.0",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.3"
  },
  "overrides": {
    "express": "$express"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
